.navbar {
  position: fixed;
  left: 0;
  top: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 80rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
  z-index: 10;
}
.navbar .nav-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100%;
  font-size: 30rpx;
  color: #303133;
  position: relative;
}
.navbar .nav-item.current {
  color: #0099FF;
}
.navbar .nav-item.current:after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 120rpx;
  height: 0;
  border-bottom: 4rpx solid #0099FF;
}
.navbar .p-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.navbar .p-box .yticon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 30rpx;
  height: 14rpx;
  line-height: 1;
  margin-left: 4rpx;
  font-size: 28rpx;
  color: #888;
}
.navbar .p-box .yticon.active {
  color: #0099FF;
}
.navbar .p-box .xia {
  -webkit-transform: scaleY(-1);
          transform: scaleY(-1);
}
.list-wrapper {
  margin-top: 180rpx;
}
.list-wrapper .list-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: solid 2rpx #F0F0F0;
  padding: 10rpx;
  background: #FFFFFF;
}
.list-wrapper .list-item .info image {
  width: 240rpx;
  height: 240rpx;
}
.list-wrapper .list-item .info .title {
  font-size: 28rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-wrapper .list-item .info .ord {
  color: #999999;
  margin-top: 20rpx;
}
.list-wrapper .list-item .info .ord .price {
  margin-top: 20rpx;
  color: #a71e32;
}
.list-wrapper .list-item .info:nth-child(even) {
  margin-left: 20rpx;
}
.list-wrapper .list-item:nth-last-of-type(2) {
  border-bottom: none !important;
}

