.list-wrap {
  background-color: white;
}
.list-wrap .list-item {
  font-size: 28rpx;
  padding: 0rpx 50rpx;
  border-bottom: 1px solid #f4f4f4;
  height: 100rpx;
  line-height: 100rpx;
}
.list-wrap .list-item image {
  width: 80rpx;
  height: 80rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 10rpx;
}
.list-wrap .list-item text {
  float: right;
  margin-right: 30rpx;
}
.list-wrap .list-item::after {
  position: absolute;
  right: 50rpx;
  content: '';
  width: 12rpx;
  height: 12rpx;
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  margin-top: 40rpx;
}
.popup-wrap {
  background-color: rgba(255, 255, 255, 0.95);
  width: 500rpx;
  border-radius: 26rpx;
}
.popup-wrap .popup-form {
  display: block;
  padding: 30rpx 20rpx 0rpx;
}
.popup-wrap .popup-form .popup-block {
  position: relative;
  margin-bottom: 20rpx;
}
.popup-wrap .popup-form .title {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}
.popup-wrap .popup-form .popup-input {
  background-color: white;
  border: 1px solid #dcdcdc;
  height: 68rpx;
  padding: 0 20rpx;
}
.popup-wrap .popup-form .hidden {
  display: none;
}
.popup-wrap .popup-form .part input {
  width: 60%;
}
.popup-wrap .popup-form .part button {
  position: absolute;
  right: 0;
  top: 0;
  width: 40%;
  height: 100%;
  line-height: 68rpx;
  padding: 0;
}
.popup-wrap .popup-form .popup-button {
  display: inline-block;
  width: 50%;
}

