.details-box .main .block {
  margin: 20rpx 0;
}
.details-box .main .title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  padding: 16rpx;
  line-height: 2.1;
  border-bottom: 1px dashed #dcdcdc;
  background-color: white;
}
.details-box .main .cate {
  padding: 20rpx 16rpx;
  background-color: white;
}
.details-box .main .content {
  padding: 20rpx 16rpx;
  color: #333333;
  line-height: 1.5;
  font-size: 26rpx;
  background-color: white;
}
.details-box .main .image {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 16rpx;
  background-color: white;
  text-align: center;
}
.details-box .main .image view {
  width: 33.3333%;
  height: 200rpx;
  padding: 2px;
}
.details-box .main .image view image {
  width: 100%;
  height: 100%;
}
.details-box .main .item-list {
  background-color: white;
  color: #333333;
}
.details-box .main .item-list .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 16rpx;
  border-bottom: 1px dashed #dcdcdc;
  line-height: 2.1;
  font-size: 28rpx;
}
.details-box .main .item-list .item view:first-child {
  width: 50%;
}
.details-box .main .item-list .item view:last-child {
  font-size: 24rpx;
  color: #14aaf7;
}
.details-box .main .item-list .item button {
  background-color: #13aaf6;
  color: white;
  font-size: 24rpx;
  padding: 0 20rpx;
  vertical-align: top;
  margin-left: 8rpx;
}

