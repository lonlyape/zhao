page {
  background-color: #edf2f8;
}
.page_index .banner {
  width: 100%;
  height: 400rpx;
  position: relative;
  z-index: 100;
}
.page_index .banner .banner_img {
  width: 100%;
  height: 100%;
  position: absolute;
}
.page_index .banner .search_view {
  position: absolute;
  width: 90%;
  left: 5%;
  top: 230rpx;
  overflow: hidden;
  height: 36px;
  border-radius: 18px;
}
.page_index .banner .search_view .search-bar {
  position: absolute;
  top: -16rpx;
  left: -16rpx;
  right: -16rpx;
}
.page_index .scroll_box {
  width: 100%;
  overflow: scroll;
}
.page_index .tab_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #5c7087;
  color: #fff;
  position: relative;
  z-index: 100;
  width: 113%;
}
.page_index .tab_box .tab_item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  font-weight: bold;
  letter-spacing: .6rpx;
  position: relative;
  height: 92rpx;
  line-height: 92rpx;
  overflow: hidden;
}
.page_index .tab_box .tab_item .tab_left {
  width: 0;
  height: 0;
  position: absolute;
  border: 14rpx solid transparent;
  border-left-color: #fff;
  border-top-width: 92rpx;
  top: 0;
  left: 0;
}
.page_index .tab_box .tab_item .tab_right {
  width: 0;
  height: 0;
  position: absolute;
  border: 14rpx solid transparent;
  border-right-color: #fff;
  border-top-width: 92rpx;
  top: 0;
  right: 0;
}
.page_index .tab_box .tab_item.alive {
  background-color: #fff;
  color: #0669ed;
}
.page_index .alive_4_view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
