.materials_detail {
  padding-bottom: 60rpx;
}
.materials_detail .swiper_box {
  position: relative;
}
.materials_detail .swiper_box .swiper_page {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 40rpx;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  padding: 10rpx 30rpx;
}
.materials_detail .sp_msg {
  padding: 10px;
  background-color: #fff;
}
.materials_detail .sp_msg .img_box .img {
  width: 100%;
  height: 100%;
}
.materials_detail .sp_msg .price_view {
  color: #ff5500;
  margin: 20rpx 0 14rpx;
}
.materials_detail .sp_msg .price_view .text {
  font-size: 40rpx;
  font-weight: bold;
}
.materials_detail .cell_groud {
  background-color: #fff;
  margin-top: 30rpx;
}
.materials_detail .detail_view.padding_box {
  padding: 0 30rpx;
}
.materials_detail .detail_view .detail_title {
  text-align: center;
  color: #333;
  margin: 60rpx 0;
  position: relative;
}
.materials_detail .detail_view .detail_title::after {
  content: '';
  display: block;
  width: 20px;
  height: 1rpx;
  background-color: #b8b8b8;
  position: absolute;
  left: 50%;
  margin-left: -10px;
  bottom: -20rpx;
}
.materials_detail .detail_view .detail_img_box {
  padding: 0 10px;
  background-color: #fff;
}
.materials_detail .detail_view .detail_img_box .img {
  width: 100%;
}
.materials_detail .detail_view .pro_view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  width: 100%;
}
.materials_detail .mask {
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
}
.materials_detail .mask [class^=mask_] {
  position: absolute;
  background-color: #fff;
  top: 200rpx;
  width: 90%;
  left: 5%;
  padding: 40rpx 30rpx 0;
  border-radius: 10rpx;
}
.materials_detail .mask [class^=mask_] .title {
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.materials_detail .mask [class^=mask_] .cancel {
  padding: 30rpx 0;
  border-top: 1rpx solid #ededed;
  text-align: center;
  letter-spacing: 1px;
  margin-top: 30rpx;
}
.materials_detail .mask .mask_3 .content,
.materials_detail .mask .mask_1 .content {
  text-align: center;
}
.materials_detail .mask .mask_3 .content .contat,
.materials_detail .mask .mask_1 .content .contat {
  margin-bottom: 10rpx;
  color: #007AFF;
  text-decoration: underline;
}

