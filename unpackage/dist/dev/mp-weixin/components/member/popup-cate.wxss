.popup-wrap {
  width: 50vh;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: #dcdcdc 0 0 10rpx;
  height: 70vh;
  overflow: hidden;
  border-top-left-radius: 26rpx;
  border-top-right-radius: 26rpx;
}
.popup-wrap .popup-head {
  background: #f3f3f3;
  text-align: center;
  font-size: 32rpx;
  padding: 30rpx;
}
.popup-wrap .popup-body {
  padding: 20rpx;
  overflow-y: auto;
  height: 90%;
}
.popup-wrap .popup-body .item .t {
  font-size: 32rpx;
  color: #0099ff;
}
.popup-wrap .popup-body .item label {
  display: block;
  height: 100%;
  position: relative;
  padding: 20rpx;
  font-size: 28rpx;
}
.popup-wrap .popup-body .item label checkbox, .popup-wrap .popup-body .item label radio {
  position: absolute;
  right: 0;
}
.popup-wrap .popup-button {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  text-align: center;
  margin-bottom: -80rpx;
}
.popup-wrap .popup-button .button {
  display: inline-block;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}

