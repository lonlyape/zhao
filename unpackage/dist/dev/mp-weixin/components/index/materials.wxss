.materials_com {
  background-color: #fff;
}
.materials_com .pro_img {
  width: 100%;
  margin-bottom: 0;
}
.materials_com .msg_box {
  padding: 20rpx;
}
.materials_com .msg_box .title {
  color: #8d98a4;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  white-space: pre-wrap;
  word-break: break-all;
  -webkit-line-clamp: 2;
  line-height: 40rpx;
  height: 80rpx;
}
.materials_com .msg_box .price {
  color: #1c6ee5;
  margin: 14rpx 0 10rpx;
}
.materials_com .msg_box .price .price_text {
  font-size: 42rpx;
}
